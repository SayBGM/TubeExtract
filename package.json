{
  "name": "yt-downloder",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.mjs",
  "type": "module",
  "scripts": {
    "dev": "vite --port 1420",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on tcp:1420 && electron .\"",
    "build": "tsc -b && vite build",
    "electron:build": "npm run build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:e2e": "PLAYWRIGHT_BROWSERS_PATH=0 playwright test"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "check-disk-space": "^3.4.0",
    "clsx": "^2.1.1",
    "ffmpeg-static": "^5.2.0",
    "i18next": "^25.8.13",
    "lucide-react": "^0.575.0",
    "motion": "^12.34.3",
    "overlay-kit": "^1.8.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^7.13.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.0",
    "tw-animate-css": "^1.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.tubeextract.desktop",
    "productName": "TubeExtract",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.video"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
